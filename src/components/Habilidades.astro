---

import type { Skills } from '../interfaces/Interfaces'

interface Props {
    skills: Skills
}

const { skills } = Astro.props;
---

    <div class="mt-12 grid gap-6 md:grid-cols-2 xl:grid-cols-4">
    {Object.entries(skills).map(([c,s])=> (

        <div class="rounded-2xl border border-neutral-200 bg-white p-6 shadow-sm">
          <h3 class="text-lg font-medium text-neutral-900">{c}</h3>

          <ul class="mt-5 space-y-4">
            {
              s
              .slice() // Clonamos el array para no mutar el original
              .sort((a, b) => b.level - a.level) // Ordenamos de mayor a menor
              .map((skill, index) => (
            
              <li class="group">
                <!-- Etiqueta -->
                <div class="mb-1.5 inline-flex items-center gap-2">
                  <span class="rounded-full bg-neutral-100 px-2.5 py-1 text-xs font-medium text-neutral-700 ring-1 ring-neutral-200">
                    {skill.name}
                  </span>
                  <span class="text-[12px] text-neutral-500 tabular-nums">{skill.level}%</span>
                </div>

                <!-- Barra de progreso -->
                <div class="h-2.5 w-full rounded-full bg-neutral-100 ring-1 ring-neutral-200 overflow-hidden">
                  <div
                    class="h-full rounded-full bg-neutral-900 animate-grow"
                    style={`width:${skill.level}%;`}
                    aria-label={`Nivel en ${skill.name}: ${skill.level}%`}
                    role="progressbar"
                    aria-valuemin="0" aria-valuemax="100" aria-valuenow={skill.level}
                  />
                </div>
              </li>
              ))
            }
          </ul>
        </div>
      ))}

    </div>







    

